               <msContents n="1">
                  
                  <summary>
                     An illuminated paper scroll of the <title key="work_00020" xml:lang="sa">Bhagavadgītā</title>.   
                  </summary>
                                                                      
                  <msItem> 
                     
                     <title key="work_00020" xml:lang="sa">Bhagavadgītā</title>
                     
                     <rubric xml:lang="sa">
                        oṃ śrī gaṇeśā
                     </rubric>
                     
                     <textLang mainLang="sa">Sanskrit.</textLang>
                  </msItem>
                  
               </msContents>
               
