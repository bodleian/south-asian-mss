                     <msItem>
                        <locus from="132r" to="161v">Ff. 132r-161v [ff. 1-30 in original foliation]</locus>
                        
                        <title key="work_00224" xml:lang="sa">Viṣṇusahasranāmakathana</title>
                        
                        <rubric>
                           <locus from="132r" to="132r">F. 132r:</locus>
                           oṃ śrī rāmāyanamaḥ |
                        </rubric>                     
                        
                        <incipit>
                           <locus from="132r" to="132r">F. 132r:</locus>
                           oṃ yasya smaraṇamotreṇajanma saṁsārabaṃdhanāt ||
                        </incipit>  
                        
                        <colophon>
                           <locus from="161v" to="161v">F. 161v:</locus>
                           iti śrī mahābhārate śatasahasra saṁhitāyāṃ vaiyāsiṃkā | śāṃtiparvāṇi utamānuśāsane dānadharmeṣu śrīvismonāma sahasaṃsamāptaṃ ||
                           rāma rāma śubham ||
                        </colophon>
                        
                        <textLang mainLang="sa">Sanskrit</textLang>
                        
